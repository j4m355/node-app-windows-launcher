<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Background="Gray">
            <Label Content="Node App Windows Launcher Settings"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1">
            <DataGrid Name="GridDataOutput" 
                      AutoGenerateColumns="True"
                    ItemsSource="{Binding}"
                      Height="249"></DataGrid>
        
            

        </StackPanel>

        <Grid Grid.Row="2">
      
                <Button DockPanel.Dock="Left" Margin="10,10,364,10" Click="ButtonBase_OnClick" Content="Restart Service"></Button>
                <Button DockPanel.Dock="Right" Margin="341,10,10,10" Content="Save" Click="Button_Click_1"></Button>
            </Grid>
        
    </Grid>
</Window>
